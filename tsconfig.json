{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./build",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "esnext",
    "sourceMap": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@learning-socket/*": [
        "packages/*/src/index.ts",
        "packages/*/src/index.tsx"
      ]
    },
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "packages/client"
    },
    {
      "path": "packages/server"
    }
  ],
  "exclude": ["node_modules", "build", "*.d.ts"]
}
